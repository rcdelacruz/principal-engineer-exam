{
  "name": "techflow-principal-engineer-exam",
  "version": "1.0.0",
  "description": "3-Day Principal Engineer Coding Exam - TechFlow SaaS Platform",
  "private": true,
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "scripts": {
    "setup": "npm install && npm run db:setup",
    "dev": "concurrently \"npm run dev:api\" \"npm run dev:web\"",
    "dev:api": "npm run dev --workspace=apps/api",
    "dev:web": "npm run dev --workspace=apps/web",
    "dev:admin": "npm run dev --workspace=apps/admin",
    "build": "npm run build --workspaces",
    "start": "concurrently \"npm run start:api\" \"npm run start:web\"",
    "start:api": "npm run start --workspace=apps/api",
    "start:web": "npm run start --workspace=apps/web",
    "type-check": "npm run type-check --workspaces",
    "lint": "eslint . --ext .ts,.tsx,.js,.jsx --fix",
    "lint:check": "eslint . --ext .ts,.tsx,.js,.jsx",
    "format": "prettier --write .",
    "format:check": "prettier --check .",
    "test": "npm run test:unit && npm run test:integration",
    "test:unit": "jest --config=jest.config.js --testPathPattern=unit",
    "test:integration": "jest --config=jest.config.js --testPathPattern=integration",
    "test:e2e": "playwright test",
    "test:coverage": "jest --coverage --config=jest.config.js",
    "test:watch": "jest --watch",
    "db:setup": "npm run db:create && npm run db:migrate && npm run db:seed",
    "db:create": "npm run db:create --workspace=packages/database",
    "db:migrate": "npm run migrate --workspace=packages/database",
    "db:seed": "npm run seed --workspace=packages/database",
    "db:reset": "npm run db:drop && npm run db:setup",
    "db:drop": "npm run db:drop --workspace=packages/database",
    "docker:build": "docker build -t techflow .",
    "docker:run": "docker-compose up",
    "docker:down": "docker-compose down",
    "deploy:staging": "npm run build && npm run deploy:staging --workspace=infrastructure",
    "deploy:production": "npm run build && npm run deploy:production --workspace=infrastructure",
    "analyze:bundle": "npm run analyze --workspace=apps/web",
    "security:audit": "npm audit && npm run security:scan",
    "security:scan": "semgrep --config=auto .",
    "docs:generate": "typedoc --options typedoc.json",
    "prepare": "husky install"
  },
  "devDependencies": {
    "@playwright/test": "^1.40.0",
    "@types/jest": "^29.5.0",
    "@types/node": "^20.0.0",
    "@typescript-eslint/eslint-plugin": "^6.0.0",
    "@typescript-eslint/parser": "^6.0.0",
    "concurrently": "^8.2.0",
    "eslint": "^8.50.0",
    "eslint-config-next": "^14.0.0",
    "eslint-config-prettier": "^9.0.0",
    "eslint-plugin-import": "^2.28.0",
    "eslint-plugin-jsx-a11y": "^6.7.0",
    "eslint-plugin-react": "^7.33.0",
    "eslint-plugin-react-hooks": "^4.6.0",
    "eslint-plugin-security": "^1.7.0",
    "husky": "^8.0.0",
    "jest": "^29.7.0",
    "jest-environment-node": "^29.7.0",
    "lint-staged": "^15.0.0",
    "prettier": "^3.0.0",
    "ts-jest": "^29.1.0",
    "typedoc": "^0.25.0",
    "typescript": "^5.2.0"
  },
  "lint-staged": {
    "*.{js,jsx,ts,tsx}": [
      "eslint --fix",
      "prettier --write"
    ],
    "*.{json,md,yml,yaml}": [
      "prettier --write"
    ]
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged",
      "commit-msg": "commitlint -E HUSKY_GIT_PARAMS"
    }
  },
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=8.0.0"
  },
  "keywords": [
    "saas",
    "e-commerce",
    "fintech",
    "enterprise",
    "nextjs",
    "nodejs",
    "typescript",
    "principal-engineer",
    "coding-exam"
  ],
  "author": "Principal Engineer Candidate",
  "license": "MIT"
}